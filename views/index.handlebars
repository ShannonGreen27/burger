<h1>EAT-DA-BURGER!</h1>

<ol>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour it!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ol>

<ol>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.name}}
      </li>
    {{/if}}
  {{/each}}
</ol>

<h2>BURGER?</h2>
<form class="create-update-form" action="burgers/create" method="POST">

  <div class="form-group">
    <input type="text" id="burgerId" name="burger_name">
          <input type="hidden" name="devoured" value="true">
    <button type="submit">Submit</button>
    <br><br><p>Enter a burger you want to eat and click the "submit" button.</p>
  </div>

</form>
